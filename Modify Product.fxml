<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ModifyProduct">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <Pane layoutY="50.0" prefHeight="300.0" prefWidth="300.0">
               <children>
                  <TextField fx:id="prodIdText" editable="false" layoutX="125.0" layoutY="14.0" prefHeight="20.0" prefWidth="150.0" promptText="Auto-Generated" />
                  <TextField fx:id="prodNameText" layoutX="125.0" layoutY="59.333333" prefHeight="20.0" prefWidth="150.0" promptText="Enter Product's Name" />
                  <TextField fx:id="prodInvText" layoutX="125.0" layoutY="104.6666" prefHeight="20.0" prefWidth="150.0" promptText="Enter Product's Inventory" />
                  <TextField fx:id="prodPriceText" layoutX="125.0" layoutY="149.9999" prefHeight="20.0" prefWidth="150.0" promptText="Enter Price / CPU" />
                  <TextField fx:id="prodMinText" layoutX="125.0" layoutY="195.3333" prefHeight="20.0" prefWidth="150.0" promptText="Enter Inventory Minimum" />
                  <TextField fx:id="prodMaxText" layoutX="125.0" layoutY="240.6666" prefHeight="20.0" prefWidth="150.0" promptText="Enter Inventory Maximum" />
                  <Text layoutX="14.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Product ID" />
                  <Text layoutX="14.0" layoutY="76.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Product Name" />
                  <Text layoutX="14.0" layoutY="122.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Product Inventory" />
                  <Text layoutX="14.0" layoutY="167.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Product Price" />
                  <Text layoutX="14.0" layoutY="213.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Inventory Minimum" />
                  <Text layoutX="14.0" layoutY="258.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Inventory Maximum" />
               </children>
            </Pane>
            <Pane layoutX="300.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0">
               <children>
                  <TableView fx:id="partTable" layoutX="25.0" layoutY="28.0" prefHeight="110.0" prefWidth="250.0">
                     <columns>
                        <TableColumn fx:id="partIdCol" prefWidth="75.0" text="Part ID" />
                        <TableColumn fx:id="partNameCol" prefWidth="75.0" text="Part Name" />
                        <TableColumn fx:id="partInvCol" prefWidth="75.0" text="Part Inventory" />
                        <TableColumn fx:id="partPriceCol" prefWidth="75.0" text="Part Price" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <TableView fx:id="associatedPartTable" layoutX="25.0" layoutY="164.0" prefHeight="110.0" prefWidth="250.0">
                     <columns>
                        <TableColumn fx:id="associatedPartIdCol" prefWidth="75.0" text="Part ID" />
                        <TableColumn fx:id="associatedPartNameCol" prefWidth="75.0" text="Part Name" />
                        <TableColumn fx:id="associatedPartInvCol" prefWidth="75.0" text="Part Inventory" />
                        <TableColumn fx:id="associatedPartPriceCol" prefWidth="75.0" text="Part Price" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Button fx:id="mAddButton" layoutX="25.0" layoutY="138.0" mnemonicParsing="false" onAction="#onActionAdd" text="Add" />
                  <Button fx:id="mDeleteButton" layoutX="25.0" layoutY="274.0" mnemonicParsing="false" onAction="#onActionDelete" text="Remove Associated Part" />
                  <TextField fx:id="partSearchField" layoutX="114.0" layoutY="2.0" promptText="Search for Part ID or Name" />
                  <Button fx:id="partSearchButton" layoutX="60.0" layoutY="2.0" mnemonicParsing="false" onAction="#searchParts" text="Search" />
               </children>
            </Pane>
            <Text layoutX="14.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Modify Product" />
            <Button fx:id="mSaveButton" layoutX="450.0" layoutY="361.0" mnemonicParsing="false" onAction="#onActionSave" text="Save" />
            <Button fx:id="mCancelButton" layoutX="519.0" layoutY="361.0" mnemonicParsing="false" onAction="#onActionCancel" text="Cancel" />
         </children>
      </AnchorPane>
   </children>
</VBox>
